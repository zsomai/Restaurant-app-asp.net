@model IEnumerable<tema2.Models.Meal>

@{
    ViewData["Title"] = "New Order";
}

<h1>New Order</h1>

<form method="post" action="New">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Stock</td>
                    <td>
                        <input type="number" name="mealQuantities[@item.Id]" value="0" min="0" max="@item.Stock" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <button type="submit">Place Order</button>
</form>
